
@{
    ViewData["Title"] = "Train";
}

<h1>Train</h1>

<button class="btn btn-primary" id="btnTrain">
    Train
</button>

<div class="spinner-border" id="loadingSpinner" style="display: none" role="status">
    <span class="sr-only">Loading...</span>
</div>

<div id="result">

</div>

@section scripts{
    <script>
        $('#btnTrain').click(function () {
            $('#loadingSpinner').css('display', 'block');
            $('#result').text('');
            fetch('/Home/TrainSpam')
                .then(response => response.json())
                .then(data => {
                    console.log(data);
                    $('#loadingSpinner').css('display', 'none');
                    $.each(data.result, (value, key) => {
                        $('#result').append(`<div>${value}: ${key}</div>`);
                    });
                });
        });
    </script>
}
